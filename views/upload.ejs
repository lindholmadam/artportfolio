<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>upload</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">  
    <link rel="stylesheet" href="https://use.typekit.net/luy7vug.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>

<!-- CSS -->
<style>
body {
    background-color: #191919;
    position: inherit;
}
.section-secrets {
    display: flex;
    align-items: center;
    flex-direction: column;
    width: 100%;
    z-index: -10;
    color: white;
    margin-bottom: 50px;
    gap: 15px;
    padding: 0 3vw;
}
.header-container {
    display: flex;
    justify-content: space-between;
    width: min(1000px, 97vw);
    margin: 40px 0;
}
.form-container {
    display: flex;
    flex-direction: column;
    width: 100%;
    align-items: center;
    color: white;
}
form {
    display: none;
    width: min(1000px, 97vw);
    padding: 10px;
    background-color: rgb(233, 233, 233);
    color: black;
    margin-bottom: 50px;
}
form.expand {
    display: block;
}
h1 {
    color: rgb(255, 255, 255);
    font-size: 23px;
    text-transform: uppercase;
    font-weight: 700;
    text-align: center;
    width: min(1000px, 97vw);
    padding: 50px 0;
    margin: 0;
    cursor: pointer;
    color: rgb(237, 237, 237);
    background-color: #a38c8c;
}
h1:hover {
    background-color: #d4b7b7;
}
.upload-button {
    width: 300px;
}
.upload-button-container {
    display: none;
    justify-content: center;
    width: 100%;
    margin: 20px 0;
}
.upload-button-container.expand {
    display: flex;
}
.divider {
    margin-bottom: 50px;
}
.img-container {
    display: none;
    flex-direction: column;
    position: absolute;
    width: min(1100px, 100%);
    height: 100%;
    background-color: rgba(0, 0, 0, 0.8);
    padding: 0 5px 20px;
}
.img-container .bi {
    position: relative;
    height: 50px;
    width: 50px;
    align-self: flex-end;
    font-size: 50px;
    color: rgb(255, 255, 255);
    margin: 40px 0;
    cursor: pointer;
}
.img-container .bi:hover {
    color: rgb(187, 187, 187);
}
.img-container .bi::before {
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    position: absolute;
}
img {
    object-fit: contain;
    width: 100%;
}
</style>


<section class="section-secrets">

    <!-- Header -->
    <div class="header-container">
        <button class="btn btn-outline-info btn-sm expand-image">Glömt hur man laddar upp bild?</button>
        <a onclick="confirmLogout()" class="btn btn-outline-light btn-sm log-out" role="button">Logga ut</a>
    </div>

    <!-- BLOGG -->
    <div class="form-container">
        <h1 class="heading-start">blogginlägg</h1>
        <form action="/blogg" method="post" autocomplete="off" onsubmit="return confirm('Är du säker på att du vill publicera detta?')">

            <div class="mb-3">
                <label class="form-label">Rubrik</label>
                <input class="form-control" type="text" name="blogTitle">
            </div>

            <div class="mb-3">
                <label class="form-label">Text</label>
                <textarea class="form-control" rows="5" placeholder="Vad har du på hjärtat?" name="blogText" style="white-space: pre;"></textarea>
            </div>

            <div class="divider">
                <div class="mb-3">
                    <label class="form-label">Bild</label>
                    <input class="form-control" type="text" name="blogImage">
                </div>
                <div class="mb-3">
                    <label class="form-label">#Hashtags</label>
                    <input class="form-control" type="text" name="imageTags">
                </div>
            </div>
            <div class="upload-button-container">
                <button type="submit" class="btn btn-success upload-button">Publicera</button>
            </div>

        </form>
        

    </div>

    <!-- HÄNDELSE -->
    <div class="form-container">
        <h1 class="heading-start">händelse</h1>
        <form action="/upload" method="post" autocomplete="off" onsubmit="return confirm('Är du säker på att du vill publicera detta?')">
            <div class="mb-3">
                <label class="form-label">Datum (dag.månad.år)</label>
                <input class="form-control" type="text" placeholder="ex: 13.12.2022" name="newsDate">
            </div>
            <div class="mb-3">
                <label class="form-label">Rubrik</label>
                <input class="form-control" type="text" name="newsTitle">
            </div>

            <div class="mb-3">
                <label class="form-label">Text</label>
                <textarea class="form-control" rows="5" placeholder="Vad händer nu för kul?" name="newsText" style="white-space: pre;"></textarea>
            </div>

            <div class="upload-button-container">
                <button onclick="confirmUpload()" value="" class="btn btn-success upload-button">Publicera</button>
            </div>

        </form>
    </div>

    <!-- GALLERI -->
    <div class="form-container">
        <h1 class="heading-start">galleri-bild</h1>
        <form action="/galleri" method="post" autocomplete="off" onsubmit="return confirm('Är du säker på att du vill publicera detta?')">
            <div class="form-styling">
                <div class="mb-3 mb-3-bild">
                    <label class="form-label">Bild</label>
                    <input class="form-control" type="text" placeholder="Länk från OneDrive (Startbild)" name="imageUrl">
                </div>
                <div class="mb-3 mb-3-bild">
                    <input class="form-control" type="text" placeholder="Länk från OneDrive" name="imageUrl">
                </div>
                <div class="mb-3 mb-3-bild">
                    <input class="form-control" type="text" placeholder="Länk från OneDrive" name="imageUrl">
                </div>
                <div class="mb-3 mb-3-bild">
                    <input class="form-control" type="text" placeholder="Länk från OneDrive" name="imageUrl">
                </div>
                <div class="mb-3 mb-3-bild">
                    <input class="form-control" type="text" placeholder="Länk från OneDrive" name="imageUrl">
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label">Titel</label>
                <input class="form-control" type="text" name="imageTitle">
            </div>
            <div class="mb-3">
                <label class="form-label">Dimensioner</label>
                <input class="form-control" type="text" name="imageDimensions">
            </div>
            <div class="mb-3">
                <label class="form-label">Bildtext</label>
                <textarea class="form-control" rows="5" name="imageDescription"></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label">#Hashtags</label>
                <input class="form-control" type="text" name="imageTags">
            </div>
            <div class="upload-button-container">
                <button onclick="confirmUpload()" value="" class="btn btn-success upload-button">Publicera</button>
            </div>
        </form>
    </div>

    <!-- PRINTS -->
    <div class="form-container">
        <h1 class="heading-start">print-bild</h1>
        <form action="/prints" method="post" autocomplete="off" onsubmit="return confirm('Är du säker på att du vill publicera detta?')">
            <div class="form-styling">
                <div class="mb-3 mb-3-bild">
                    <label class="form-label">Bild</label>
                    <input class="form-control" type="text" placeholder="Länk från OneDrive" name="printUrl">
                </div>
                <div class="mb-3">
                    <label class="form-label">Titel</label>
                    <input class="form-control" type="text" name="printTitle">
                </div>
                <div class="mb-3">
                    <label class="form-label">#Hashtags</label>
                    <input class="form-control" type="text" name="printTags">
                </div>
            </div>
            <div class="upload-button-container">
                <button class="btn btn-success upload-button">Publicera</button>
            </div>
        </form>
    </div>

    <div class="img-container">
        <i class="bi bi-x-square"></i>
        <img src="https://ams03pap001files.storage.live.com/y4mSjaUNv_Jlr4AWIkfGCkF9vOupvEBjPIawzwey37Y4i3TIAoH_tutCS1gsuNy68lIuLE0eQXZz0rhpZdAaPvxzv8eOo6Y2WOCy88yJG-VZgXYZhPBOCJT5wHtz-oBoKLf4lmaPqCAkwMtoUmytoDEQq239UkIY4qRuByrpSQHw6OHmJGpF8mZ3tZ44cWw92n2?width=3588&height=4214&cropmode=none" alt="image">
    </div>

</section>

<script>

    const headings = document.querySelectorAll("h1")
    const forms = document.querySelectorAll("form")
    const buttonsContainer = document.querySelectorAll(".upload-button-container")
    const formContainers = document.querySelectorAll(".form-container")
    const buttons = document.querySelectorAll(".upload-button")

    headings.forEach((heading, idx) => {
        heading.addEventListener("click", () => {
            forms[idx].classList.toggle('expand')
            buttonsContainer[idx].classList.toggle('expand')
        })
    });

    function confirmLogout() {
        if (confirm('Är du säker på att du vill logga ut?')) {
            let logOut = document.querySelector(".log-out");
            logOut.setAttribute("href", "/logout")
        } else {
            return;
        }
    }

    const image = document.querySelector(".img-container");
    const exitImageButton = document.querySelector(".bi");
    const expandImageButton = document.querySelector(".expand-image")

    exitImageButton.addEventListener("click", () => {
        image.style.display = "none";
    })
    expandImageButton.addEventListener("click", () => {
        image.style.display = "flex";
    })


</script>

</body>
</html>