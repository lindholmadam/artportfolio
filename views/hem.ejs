<script>

const NC = document.querySelectorAll("#n-c")
NC.forEach(cl => {
    cl.addEventListener('contextmenu', function (e) { 
        e.preventDefault();
    }, false);
});


const images = document.querySelectorAll("#blog-img");
images.forEach( img => {
    const src = img.getAttribute('src');
    if (!src) {
      img.style.display = "none";
      img.parentElement.style.display = "none";
    }

})

const containers = document.querySelectorAll(".landing-container");
containers.forEach( container => {
    const img = container.firstElementChild;
    container.addEventListener("mouseenter", () => {
        img.classList.add("active");
    })
    container.addEventListener("mouseleave",() => {
        img.classList.remove("active");
    })
});


const arrowIcon = document.querySelector("#news-icon");
const newsPosts = document.querySelectorAll("#news-post");
const firstPost = document.querySelectorAll("#news-post")[0];

firstPost.style.display = "block";
arrowIcon.style.transition = ".2s ease-in-out";

arrowIcon.addEventListener("click", () => {
  newsPosts.forEach(post => {

    if (post.style.display === "none") {
      post.style.display = "block";
    } else {
      post.style.display = "none";
    }

  }); 
  arrowIcon.classList.toggle("active");
  firstPost.style.display = "block"
})


</script>


